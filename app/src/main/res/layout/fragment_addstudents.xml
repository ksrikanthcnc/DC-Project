<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Add Students"
        android:gravity="center"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:layout_below="@+id/textView"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:hint="name" />

    <EditText
        android:id="@+id/EditText_User_EmailID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student Email"
        android:gravity="center"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp" />


    <EditText
        android:id="@+id/EditText_User_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password "
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/EditText_User_EmailID"/>

    <EditText
        android:layout_below="@+id/EditText_User_Password"
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:hint="Year"
        android:inputType="number" />

    <EditText
        android:layout_below="@+id/year"
        android:id="@+id/programme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:hint="Programme" />


    <Button
        android:id="@+id/Button_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/programme"
        android:layout_marginTop="30dp"
        android:text="Add Student" />


</RelativeLayout>
